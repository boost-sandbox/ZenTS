  },
  "bugs": {
    "url": "https://github.com/sahachide/ZenTS/issues"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc-watch --onSuccess \"npm run dev:update\"",
    "lint": "eslint . -f codeframe",
    "release": "standard-version",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:typedoc": "typedoc --plugin typedoc-plugin-markdown --out docs/api src",
    "docs:deploy": "sh deploy-docs.sh",
    "dev:update": "yalc publish --push --changed",
    "dev:clean": "yalc installations clean zents",
    "dev:dependency-update": "npm-check -u",
    "test": "jest --config jest.config.json",
    "test:docker": "docker-compose up -d --build"
  },
  "files": [
    "lib/**/*",
    "LICENSE",
    "README.md",
    "ATTRIBUTION.md"
  ],
